{% extends '@App/layout.html.twig' %}

{% block body %}
    <h1>Historique de la cuve</h1>

    <div class="row">
        <div class="col-xs-12">
            <form method="get" class="form-horizontal">
                <label>
                    De
                    {{ form_widget(form.from) }}
                </label>
                <label>
                    A
                    {{ form_widget(form.to) }}
                </label>
                <label>
                    Pas de temps
                    {{ form_widget(form.step) }}
                </label>
                <button type="submit" class="btn btn-primary">Mettre Ã  jour</button>
            </form>
        </div>
    </div>

    <div id="chart" style="width: 100%; height: 500px"></div>

    <table class="table table-stripped">
        <thead>
        <tr>
            <th>#</th>
            <th>Date</th>
            <th>Time</th>
            <th>Liters (L)</th>
        </tr>
        </thead>
        <tbody>
        {% for record in records %}
            <tr>
                <td>{{ record.id }}</td>
                <td>{{ record.recordedAt|date('d/m/Y') }}</td>
                <td>{{ record.recordedAt|date('H\\hi') }}</td>
                <td>{{ record.nbLiters }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

    <script type="text/javascript">
        // Load the Visualization API and the corechart package.
        google.charts.load('current', {'packages':['corechart']});

        // Set a callback to run when the Google Visualization API is loaded.
        google.charts.setOnLoadCallback(drawChart);

        // Callback that creates and populates a data table,
        // instantiates the pie chart, passes in the data and
        // draws it.
        function drawChart() {
            var data = new google.visualization.DataTable();

            data.addColumn('string', '{{ search.step|humanize }}');
            data.addColumn('number', 'Avg liters (L)');

            data.addRows([
                {% for row in plotRecords %}
                ['{{ row.step }}', {{ row.avgLiters|round }}]{% if not loop.last %},{% endif %}
                {% endfor %}
            ]);

            var options = {
                title: 'Quv Performance',
                curveType: 'function',
                legend: { position: 'bottom' }
            };

            // Instantiate and draw our chart, passing in some options.
            var chart = new google.visualization.LineChart(document.getElementById('chart'));
            chart.draw(data, options);
        }
    </script>
{% endblock %}
